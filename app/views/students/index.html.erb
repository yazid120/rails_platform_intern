<p style="color: green"><%= notice %></p>
<%= render 'navbar' %>

<h1>Students</h1>

<div id="students">
  <% @students.each do |student| %>
    <%= render student %>
    <button style="box-sizing:border-box;border:1px solid #000000;border-radius: 5px;padding:0.2rem">
      <%= link_to "Show this student", student %>
    </button>
  <% end %>
</div>

<%= link_to "New student", new_student_path %>

